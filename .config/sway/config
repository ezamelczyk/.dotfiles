xwayland enable

set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'WhiteSur-dark'
    gsettings set $gnome-schema icon-theme 'WhiteSur-dark'
}

input type:touchpad {
  natural_scroll enabled
  tap enabled
}

input * {
    xkb_layout "pl"
}

set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec mkfifo $WOBSOCK && tail -f $WOBSOCK | wob

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable

include /etc/sway/config.d/*
include $HOME/.config/sway/for_windows
include $HOME/.config/sway/bindings
include $HOME/.config/sway/style
include $HOME/.config/sway/workspaces

exec kanshi
